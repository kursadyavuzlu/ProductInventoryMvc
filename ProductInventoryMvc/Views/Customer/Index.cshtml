@using ProductInventoryMvc.Models.Entity
@model List<Tbl_Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Customer ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    <tbody>
        @foreach(var cstm in Model)
        {
        <tr>
            <td>@cstm.CustomerID</td>
            <td>@cstm.CustomerName</td>
            <td>@cstm.CustomerSurname</td>
            <td><a href="/Customer/Update/@cstm.CustomerID" class="btn btn-warning">Update</a></td>
            <td><a href="/Customer/Delete/@cstm.CustomerID" class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

<a href="/Customer/Add/" class="btn btn-primary">Add customer</a>

