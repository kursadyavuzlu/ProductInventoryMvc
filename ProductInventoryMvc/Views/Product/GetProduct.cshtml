@model ProductInventoryMvc.Models.Entity.Tbl_Products
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Update", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ProductID)
        @Html.TextBoxFor(m => m.ProductID, new { @class = "form-control" })

        <br />

        @Html.LabelFor(m => m.ProductName)
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })

        <br />

        @Html.LabelFor(m => m.ProductCategory)
        @*@Html.TextBoxFor(m => m.ProductCategory, new { @class = "form-control" })*@
        @Html.DropDownListFor(m => m.Tbl_Categories.CategoryID, (List<SelectListItem>)ViewBag.vl, new { @class = "form-control" })

        <br />

        @Html.LabelFor(m => m.ProductTrademark)
        @Html.TextBoxFor(m => m.ProductTrademark, new { @class = "form-control" })

        <br />

        @Html.LabelFor(m => m.ProductPrice)
        @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control" })

        <br />

        @Html.LabelFor(m => m.ProductStock)
        @Html.TextBoxFor(m => m.ProductStock, new { @class = "form-control" })
    </div>

    <div style="margin-top:20px">
        <button class="btn btn-info">Update</button>
    </div>

}

